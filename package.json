{
  "name": "events-calendar",
  "version": "1.0.0",
  "description": "a backend application to manage a community event registration",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc -b",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest src"
  },
  "keywords": [
    "calendar"
  ],
  "author": "Anton Tymchenko",
  "license": "ISC",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node ./src/index.ts"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "typescript": "^5.5.4"
  }
}
